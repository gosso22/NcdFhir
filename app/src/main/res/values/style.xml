<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.SearchBar" parent="Widget.Material3.SearchBar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.SearchBar</item>
    </style>

    <style name="ThemeOverlay.App.SearchBar" parent="">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style
        name="Questionnaire.LocationWidgetButtonStyle"
        parent="Widget.Material3.Button.TextButton.Icon"
        >
        <item name="android:drawableLeft">@drawable/gm_location_on_24</item>
        <item name="android:drawableTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:text">@string/record_gps_location</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>
    <style name="Theme.MyQuestionnaire" parent="Theme.Questionnaire">
        <item name="questionnaireQuestionTextStyle">
            @style/TextAppearance.MaterialComponents.Subtitle2
        </item>
    </style>
</resources>